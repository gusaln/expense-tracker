{
  "compilerOptions": {

    "target": "ES2020",
    "lib": [
      "ES2020",
    ],

    "module": "CommonJS",
    "rootDir": "./src",
    // "moduleResolution": "Node",

    // "declaration": true,
    // "sourceMap": true,

    // "outDir": "./build",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strict": true,

    "skipLibCheck": true,
  },
}
